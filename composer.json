{
    "name": "usyeimar/messenger-platform-api",
    "description": "The first PHP API to send and receive messages using the Messeger platform. You can create messaging solutions that allow you to get in touch with your customers, leads, and followers.",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.6",
        "myclabs/php-enum": "^1.8"
    },
    "require-dev": {
        "pestphp/pest": "^2.30",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.46",
        "symfony/var-dumper": "^7.0",
        "fakerphp/faker": "^1.23"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Usyeimar\\MessengerPlatformApi\\": "src/"
        }
    },
    "authors": [
        {
            "name": "YEIMAR LEMUS",
            "email": "yeimar112003@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
